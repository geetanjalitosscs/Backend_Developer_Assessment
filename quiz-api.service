[Unit]
Description=Quiz API PHP Server
After=network.target mysql.service
Wants=mysql.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/quiz-api
ExecStart=/usr/bin/php -S 0.0.0.0:8087 -t /var/www/quiz-api router.php
Restart=always
RestartSec=10
StandardOutput=append:/var/log/quiz-api/access.log
StandardError=append:/var/log/quiz-api/error.log

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target


